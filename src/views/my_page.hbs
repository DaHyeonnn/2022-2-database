<!DOCTYPE html>
    <head>
        <title>SIGNUP</title>
        <style>
        table {
            width: 100%;
            border: 1px solid #444444;
            background-color: #ffead8;
        }
        td,tr {
            border: 1px solid #444444;
            background-color: white;
        }
    </style>
    <script>
     const logout = () => {window.location.href="http://localhost:3000/logout"};
      
    function doOpenCheck(chk){
        console.log("ok", chk);
        var obj = document.getElementsByName("users");
        for(var i=0; i<obj.length; i++){
            if(obj[i] != chk){
                obj[i].checked = false;
            }
    }
    }

    </script>
    </head>
    <html>
    <body>
        <div class="navbar">
        <a class="logo" href="/">
        <img onClick="window.location.reload()" src="./images/logo.png" height="50px">
        </a>
        <div class="userinfo">{{sid}}님이 로그인중입니다.
        <button class="logout" onclick="logout()">Logout</button></div>
        </div>
    <div>    
    <h2>{{title1}}</h2>
    {{#each my_info}}
    <div>
        id : {{id}}
    </div>
    <div>
        이름 : {{name}}
    </div>
    <div>
        주소 : {{address_city}}, {{address_country}}, {{address_road}}
    </div>
    {{/each}}
    </div>
    <div>
    <h2>{{title2}}</h2>
    <table> 
        <tr>
            <td>성함</td>
            <td>차량식별번호</td>
            <td>model</td>
            <td>fuel</td>
            <td>주행거리</td>
            <td>가격</td>
            <td>연식</td>
            <td>예약날짜</td>
            <td>판매자ID</td>
            <td>예약현황</td>
            <td>button</td>
        </tr>
    {{#each my_res}}
    <form method="post" name="my_res_car">   
        <tr>
            <td>{{name}}</td>
            <td>{{vin}}</td>
            <td>{{model}}</td>
            <td>{{fuel}}</td>
            <td>{{mileage}}</td>
            <td>{{price}}</td>
            <td>{{year}}</td>
            <td>{{date}}</td>
            <td>{{saleid}}</td>
            <td>{{status}}</td>
            <td><button 
                style="margin-left: 10px;" 
                name="my_car_res"
                type="submit"
                value="{{vin}}" 
                formaction="/my_page"
                > 예약취소</button></td>
        </tr>
    
    </form>
    {{/each}}
    
    </div>

    </body>
</html>